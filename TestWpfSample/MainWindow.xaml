<Window x:Class="TestWpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfSample"
        mc:Ignorable="d" Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">

    <Window.Resources>
    </Window.Resources>


    <Grid Background="#FFCCCCCC" x:Name="Grd" Margin="0,0,0,0">
        <Button Content="Load" HorizontalAlignment="Left" Margin="144,10,0,0" VerticalAlignment= "Top" Width="87" Click="ButtonLoadPages_Click" Height="26" Visibility="Hidden" />
        <ComboBox x:Name="comboBoxTransTypes" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Height="26" SelectionChanged="comboBoxTransTypes_SelectionChanged"/>
        <Border Margin="0, 50, 0, 0" BorderThickness="1" BorderBrush="Black"/>
        <StackPanel x:Name="stackPanel" Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Stretch" />
    </Grid>
</Window>
