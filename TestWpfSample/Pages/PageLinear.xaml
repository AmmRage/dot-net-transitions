<Page x:Class="TestWpfSample.PageLinear"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWpfSample.Pages"
      mc:Ignorable="d" Name="Linear"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageLinear">

    <Grid >
        <TextBlock Name="textBlockTransitionType" Height="30" VerticalAlignment="Top" />
        
        <Button x:Name="buttonTransition" Content="Linear" Margin="0,0,0,0" Width="125" Height="40"
                HorizontalAlignment="Left" Click="buttonLinear_Click" Background="DarkGray"/>
    </Grid>
</Page>
