      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWpfSample.Pages"
      mc:Ignorable="d" Name="CrossThread"
      d:DesignHeight="300" d:DesignWidth="300"
